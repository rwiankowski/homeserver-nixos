## secrets/secrets.yaml.example
## ===========================
#This is a template for your secrets file.
# Copy this to secrets/secrets.yaml and fill in with real values.
# Use: cp secrets/secrets.yaml.example secrets/secrets.yaml
# Then: sops secrets/secrets.yaml

# Database passwords (generate with: openssl rand -base64 32)
database:
  authentik_password: "CHANGEME-generate-secure-password"
  immich_password: "CHANGEME-generate-secure-password"
  paperless_password: "CHANGEME-generate-secure-password"

# Application secrets (generate with: openssl rand -base64 50)
authentik:
  secret_key: "CHANGEME-generate-long-random-string"

openwebui:
  secret_key: "CHANGEME-generate-long-random-string"

nextcloud:
  admin_password: "CHANGEME-strong-admin-password"

paperless:
  admin_password: "CHANGEME-strong-admin-password"

pgadmin:
  admin_password: "CHANGEME-strong-admin-password"

grafana:
  admin_password: "CHANGEME-strong-admin-password"

# Azure DNS credentials (for Let's Encrypt DNS-01 challenge)
# Get these from: docs/AZURE.md Part 2
azure:
  tenant_id: "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  client_id: "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  client_secret: "CHANGEME-service-principal-secret"
  subscription_id: "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  resource_group: "homeserver-resources"

# Backup configuration
# Get Azure storage credentials from: docs/AZURE.md Part 3
restic:
  password: "CHANGEME-backup-encryption-password"
  repository: "azure:restic-backups:/"
  azure_account_name: "yourstorageaccountname"
  azure_account_key: "CHANGEME-storage-account-key-from-azure"

# CrowdSec (optional, leave empty initially)
# Sign up at https://app.crowdsec.net to get enrollment key
crowdsec:
  enroll_key: ""  # Add after signing up for CrowdSec console

